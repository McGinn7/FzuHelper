<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/course_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/course_today_background"
                android:orientation="horizontal" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6" >
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:background="@color/transparent">
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/course_week_month"
                    android:layout_width="@dimen/course_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/small_text_size"/>
            </LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:orientation="vertical">
				<TextView
	        	    android:id="@+id/text_monday"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:gravity="center"
	        	    android:textSize="@dimen/small_text_size"/>
			</LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:orientation="vertical">
				<TextView
	        	    android:id="@+id/text_tuesday"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:gravity="center"
	        	    android:textSize="@dimen/small_text_size"/>
			</LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:orientation="vertical">
				<TextView
	        	    android:id="@+id/text_wednesday"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:gravity="center"
	        	    android:textSize="@dimen/small_text_size"/>
			</LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:orientation="vertical">
				<TextView
	        	    android:id="@+id/text_thursday"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:textColor="@color/black"
	        	    android:gravity="center"
	        	    android:textSize="@dimen/small_text_size"/>
			</LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:orientation="vertical">
				<TextView
	        	    android:id="@+id/text_friday"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:gravity="center"
	        	    android:textSize="@dimen/small_text_size"/>
			</LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:orientation="vertical">
				<TextView
	        	    android:id="@+id/text_saturday"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:gravity="center"
	        	    android:textSize="@dimen/small_text_size"/>
			</LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:orientation="vertical">
				<TextView
	        	    android:id="@+id/text_sunday"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:gravity="center"
	        	    android:textSize="@dimen/small_text_size"/>
			</LinearLayout>
	    </LinearLayout>
        
    </FrameLayout>
	<android.support.v4.view.ViewPager
  	    android:id="@+id/course_viewpager"
  	    android:layout_width="match_parent"
  	    android:layout_height="0dp"
  	    android:layout_weight="15"
  	    android:background="@color/bg_color">
  	</android.support.v4.view.ViewPager>
</LinearLayout>