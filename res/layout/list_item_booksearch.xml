<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
	<LinearLayout
		android:id="@+id/lib_search_side_color"
		android:layout_width="15dp"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:orientation="horizontal" >
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	        <TextView
	            android:id="@+id/lib_search_bookname"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|left"
	            android:text="JavaScript基础与案例开发详解"
	            android:textColor="@color/green_light"
	            android:textSize="@dimen/large_text_size" />
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:baselineAligned="true"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp">
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="2"
		            android:gravity="center_vertical|left"
		            android:singleLine="true"
		            android:text="作者"
		            android:textColor="@color/black"
		            android:textSize="@dimen/middle_text_size" />
		        <LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="0.5">
		        </LinearLayout>
		        <TextView
		            android:id="@+id/lib_search_author"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="7"
		            android:gravity="center_vertical|left"
		            android:maxLines="1"
		            android:text="楼不夜"
		            android:textColor="@color/dark_grey"
		            android:textSize="@dimen/middle_text_size"/>
			</LinearLayout>
			<LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:baselineAligned="true"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp">
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="2"
		            android:gravity="center_vertical|left"
		            android:singleLine="true"
		            android:text="出版社"
		            android:textColor="@color/black"
		            android:textSize="@dimen/middle_text_size" />
		        <LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="0.5">
		        </LinearLayout>
		        <TextView
		            android:id="@+id/lib_search_publisher"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="7"
		            android:gravity="center_vertical|left"
		            android:maxLines="1"
		            android:text="清华大学出版社"
		            android:textColor="@color/dark_grey"
		            android:textSize="@dimen/middle_text_size"/>
			</LinearLayout>
			<LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:baselineAligned="true"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp">
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="2"
		            android:gravity="center_vertical|left"
		            android:singleLine="true"
		            android:text="位置"
		            android:textColor="@color/black"
		            android:textSize="@dimen/middle_text_size" />
		        <LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="0.5">
		        </LinearLayout>
		        <TextView
		            android:id="@+id/lib_search_place"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="7"
		            android:gravity="center_vertical|left"
		            android:maxLines="1"
		            android:text="TP312JA/309"
		            android:textColor="@color/dark_grey"
		            android:textSize="@dimen/middle_text_size"/>
			</LinearLayout>
			<TextView
			    android:id="@+id/text_more"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:text="More"
		        android:textColor="@color/grey"
		        android:textSize="@dimen/small_text_size"/>
	    </LinearLayout>
		<LinearLayout
		    android:id="@+id/lib_search_more"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
		    android:orientation="vertical"
		    android:visibility="gone">
		    <LinearLayout 
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:baselineAligned="true"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_vertical|left"
					android:singleLine="true"
					android:text="馆藏数"
					android:textColor="@color/black"
					android:textSize="@dimen/middle_text_size" />
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="0.5">
				</LinearLayout>
				<TextView
					android:id="@+id/lib_search_store"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="7"
					android:gravity="center_vertical|left"
					android:text="3"
					android:textColor="@color/dark_grey"
					android:textSize="@dimen/middle_text_size"/>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:baselineAligned="true"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_vertical|left"
					android:singleLine="true"
					android:text="可借数"
					android:textColor="@color/black"
					android:textSize="@dimen/middle_text_size" />
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="0.5">
				</LinearLayout>
				<TextView
					android:id="@+id/lib_search_leadnum"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="7"
					android:gravity="center_vertical|left"
					android:text="2"
					android:textColor="@color/dark_grey"
					android:textSize="@dimen/middle_text_size"/>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:baselineAligned="true"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_vertical|left"
					android:singleLine="true"
					android:text="年份"
					android:textColor="@color/black"
					android:textSize="@dimen/middle_text_size" />
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="0.5">
				</LinearLayout>
				<TextView
					android:id="@+id/lib_search_year"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="7"
					android:gravity="center_vertical|left"
					android:text="2014"
					android:textColor="@color/dark_grey"
					android:textSize="@dimen/middle_text_size"/>
			</LinearLayout>
		    <Button
		        android:id="@+id/lib_search_button_reser"
		        android:layout_width="match_parent"
		        android:layout_height="70dp"
		        android:background="@color/green_light"
		        android:text="预约"
		        android:textSize="@dimen/large_text_size"/>
		</LinearLayout>	    
	</LinearLayout>
</LinearLayout>