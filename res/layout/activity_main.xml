<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:orientation="vertical"
  	android:background="@color/black2">
	<!-- 用户信息 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="5"
	    android:background="@color/blue"
		android:layout_margin="10dp"
	    android:orientation="vertical">
	    <!-- 积分、周数 -->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:layout_marginRight="10dp">
	        <ImageView 
	            android:src="@drawable/credit"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:scaleType="fitCenter"/>
	        <TextView
	            android:id="@+id/text_credit"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:clickable="true"
	            android:textColor="@color/white"
	            android:textSize="@dimen/middle_text_size"/>
	        <TextView
	            android:id="@+id/text_credit_add"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="6"
	            android:paddingLeft="3dp"
	            android:gravity="center_vertical"
	            android:visibility="invisible"
	            android:textSize="@dimen/small_text_size"/>
	        <TextView
	            android:id="@+id/text_week"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="5"
	            android:gravity="center_vertical|right"
	            android:textColor="@color/white"
	            android:textSize="@dimen/middle_text_size"/>
	    </LinearLayout>
		<TextView 
		    android:id="@+id/text_greet"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textColor="@color/white"
		    android:textSize="@dimen/large_text_size"/>
		<TextView 
		    android:id="@+id/text_date"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textColor="@color/white"
		    android:textSize="@dimen/middle_text_size"/>
	</LinearLayout>
	<!-- 学习、生活 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="5"
	    android:background="@color/transparent"
	    android:orientation="horizontal"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp">
	    <ImageButton
	        android:id="@+id/button_left"
	        android:src="@drawable/life_about"
	        android:scaleType="fitCenter"
	        android:background="@color/white2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginRight="5dp"
	        android:padding="10dp"/>
	    <ImageButton 
	        android:id="@+id/button_right"
	        android:src="@drawable/study_about"
	        android:scaleType="fitCenter"
	        android:background="@color/white2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
   	        android:layout_marginLeft="5dp"
   	        android:padding="10dp"/>
	</LinearLayout>
	<!-- 天气 -->
	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
		android:background="@color/white2"
		android:orientation="horizontal">
	    <ImageButton
	        android:id="@+id/button_pre_course"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/left_dark"
	        android:scaleType="fitCenter"
	        android:background="@color/transparent"/>
		<FrameLayout 
		   	android:layout_width="0dp"
		   	android:layout_height="match_parent"
		   	android:layout_weight="7">
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:background="@color/transparent"
			    android:orientation="vertical">
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
				    android:orientation="horizontal">
				    <TextView
				        android:id="@+id/text_jie_1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="2"
				        android:maxLines="1"
				        android:gravity="center"
				        android:textColor="@color/white"
				        android:textSize="@dimen/middle_text_size"/>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="6"
				        android:orientation="vertical">
					    <TextView
					        android:id="@+id/text_course_1"
					        android:layout_width="match_parent"
					        android:layout_height="0dp"
					        android:layout_weight="1"
					        android:maxLines="1"
					        android:gravity="center"
					        android:textColor="@color/white"
					        android:textSize="@dimen/middle_text_size"/>
					    <TextView
					        android:id="@+id/text_place_1"
					        android:layout_width="match_parent"
					        android:layout_height="0dp"
					        android:layout_weight="1"
					        android:maxLines="1"
					        android:gravity="center"
  					        android:textColor="@color/white"
					        android:textSize="@dimen/middle_text_size"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
				    android:orientation="horizontal">
				    <TextView
				        android:id="@+id/text_jie_2"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="2"
				        android:maxLines="1"
				        android:gravity="center"
				        android:textColor="@color/white"
				        android:textSize="@dimen/middle_text_size"/>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="6"
				        android:orientation="vertical">
					    <TextView
					        android:id="@+id/text_course_2"
					        android:layout_width="match_parent"
					        android:layout_height="0dp"
					        android:layout_weight="1"
					        android:maxLines="1"
					        android:gravity="center"
					        android:textColor="@color/white"
					        android:textSize="@dimen/middle_text_size"/>
					    <TextView
					        android:id="@+id/text_place_2"
					        android:layout_width="match_parent"
					        android:layout_height="0dp"
					        android:layout_weight="1"
					        android:maxLines="1"
					        android:gravity="center"
  					        android:textColor="@color/white"
					        android:textSize="@dimen/middle_text_size"/>
					</LinearLayout>
				</LinearLayout>	
			</LinearLayout>
			<Button
		        android:id="@+id/main_button_course"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:gravity="center"
		        android:textSize="@dimen/large_text_size"
		        android:textColor="@color/white"
		        android:background="@color/transparent"/>
		</FrameLayout>
		<ImageButton
		    android:id="@+id/button_next_course"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/right_dark"
	        android:scaleType="fitCenter"
	        android:background="@color/transparent"/>
	</LinearLayout>
	<!-- 按钮 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.5"
	    android:background="@color/blue"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="10dp"
	    android:orientation="horizontal">
	    <Button
	        android:id="@+id/button_setting"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@color/transparent"
	        android:text="设置"
	        android:textColor="@color/white"/>
	    <Button
	        android:id="@+id/button_quit"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@color/transparent"
   	        android:text="退出"
	        android:textColor="@color/white"/>
	</LinearLayout>
</LinearLayout>